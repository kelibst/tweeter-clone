<% if obj.errors.any? %>

    <div class="col-sm-8 mx-auto ">
    <div class="card">
        <h4 class="card-title text-danger">
            <%= pluralize(obj.errors.count, "error")%>
            Prevented the article from being created!</h2>
        </h4>
        <div class="card-body">
            <ul>
                <% obj.errors.full_messages.each  do |msg|%>

                <li class="text-danger card-text"><%= msg%></li>

                <%end%>
            </ul>
        </div>
    </div>
   

<% end %>